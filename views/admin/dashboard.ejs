  <script>
    // Live Monitoring Modal Handler
    (function() {
      'use strict';

      const liveMonitoringModal = new bootstrap.Modal(document.getElementById('liveMonitoringModal'));
      const sessionTableBody = document.getElementById('sessionTableBody');
      const sessionTableLoading = document.getElementById('sessionTableLoading');
      const sessionTableContent = document.getElementById('sessionTableContent');
      const sessionTableEmpty = document.getElementById('sessionTableEmpty');

      // Handle clicks on any active device count link
      document.addEventListener('click', async function(e) {
        const clickedLink = e.target.closest('.activeDeviceCountLink');
        if (!clickedLink) return;

        e.preventDefault();

        // Show loading state on the clicked link
        const originalContent = clickedLink.innerHTML;
        clickedLink.innerHTML = '<span class="badge bg-info-subtle text-info"><i class="bi bi-arrow-clockwise spin"></i> Memuat...</span>';
        clickedLink.style.pointerEvents = 'none';
        
        // Force browser to start animation - use requestAnimationFrame for smooth start
        requestAnimationFrame(() => {
          const spinIcon = clickedLink.querySelector('.spin');
          if (spinIcon) {
            // Force reflow
            void spinIcon.offsetWidth;
            // Set inline styles to override any conflicting CSS
            spinIcon.style.cssText = 'animation: spin 1s linear infinite !important; display: inline-block !important; transform-origin: center !important;';
          }
        });

        // Show modal and loading state
        liveMonitoringModal.show();
        sessionTableLoading.style.display = 'block';
        sessionTableContent.style.display = 'none';
        sessionTableEmpty.style.display = 'none';
        sessionTableBody.innerHTML = '';

        try {
          const response = await fetch('/admin/api/live-devices');
          const data = await response.json();

          sessionTableLoading.style.display = 'none';

          // Restore clicked link
          if (clickedLink) {
            clickedLink.innerHTML = originalContent;
            clickedLink.style.pointerEvents = '';
          }

          if (data.success && data.sessions && data.sessions.length > 0) {
            // Clear existing rows
            sessionTableBody.innerHTML = '';

              // Generate table rows
              data.sessions.forEach((session) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                  <td class="py-3">
                    <div class="d-flex align-items-center gap-2">
                      <i class="bi bi-person-circle text-primary"></i>
                      <div>
                        <strong>${escapeHtml(session.user || 'N/A')}</strong>
                        ${session.commentId ? `
                          <br>
                          <small class="text-muted">
                            <code class="bg-light px-1 py-0 rounded">${escapeHtml(session.commentId)}</code>
                          </small>
                        ` : ''}
                      </div>
                    </div>
                  </td>
                  <td class="text-nowrap py-3">
                    <code class="text-primary">${escapeHtml(session.ip || 'N/A')}</code>
                  </td>
                  <td class="py-3">
                    ${session.hostname && session.hostname !== 'N/A' ? `
                      <span class="badge bg-info-subtle text-info">
                        <i class="bi bi-laptop"></i> ${escapeHtml(session.hostname)}
                      </span>
                    ` : '<span class="text-muted">-</span>'}
                  </td>
                  <td class="text-nowrap py-3">
                    <code class="text-muted">${escapeHtml(session.mac || 'N/A')}</code>
                  </td>
                  <td class="text-nowrap py-3">
                    <span class="badge bg-success-subtle text-success">
                      <i class="bi bi-clock"></i> ${escapeHtml(session.formattedUptime || '0s')}
                    </span>
                  </td>
                  <td class="text-nowrap py-3">
                    <span class="badge bg-info-subtle text-info">
                      <i class="bi bi-download"></i> ${escapeHtml(session['bytes-out-formatted'] || '0 B')}
                    </span>
                  </td>
                  <td class="text-nowrap py-3">
                    <span class="badge bg-warning-subtle text-warning">
                      <i class="bi bi-upload"></i> ${escapeHtml(session['bytes-in-formatted'] || '0 B')}
                    </span>
                  </td>
                `;
                sessionTableBody.appendChild(row);
              });

            sessionTableContent.style.display = 'block';
          } else {
            sessionTableEmpty.style.display = 'block';
          }
        } catch (error) {
          console.error('Error fetching active devices:', error);
          sessionTableLoading.style.display = 'none';
          sessionTableEmpty.style.display = 'block';

          // Restore clicked link on error
          if (clickedLink) {
            clickedLink.innerHTML = originalContent;
            clickedLink.style.pointerEvents = '';
          }

          // Show error using feedback modal
          if (typeof displayFeedbackModal === 'function') {
            displayFeedbackModal('error', 'Kesalahan', 'Gagal memuat data perangkat aktif: ' + error.message);
          } else {
            alert('Gagal memuat data perangkat aktif: ' + error.message);
          }
        }
      });

      function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }
    })();
  </script>

