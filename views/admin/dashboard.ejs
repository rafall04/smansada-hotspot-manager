  <script>
    (function() {
      'use strict';

      document.addEventListener('DOMContentLoaded', function() {
        const popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        popoverTriggerList.map(function(popoverTriggerEl) {
          return new bootstrap.Popover(popoverTriggerEl);
        });

        // Load Dashboard Data (Mikrotik) asynchronously
        function loadDashboardData() {
          const controller = new AbortController();
          const timeoutId = setTimeout(() => controller.abort(), 35000);

          fetch('/admin/api/dashboard-data', { signal: controller.signal })
            .then(response => {
              clearTimeout(timeoutId);
              if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
              }
              return response.json();
            })
            .then(data => {
              if (data.success && data.data) {
                updateDashboardUI(data.data);
              } else {
                showDashboardError(data.message || 'Gagal memuat data');
              }
            })
            .catch(error => {
              clearTimeout(timeoutId);
              console.error('Error loading dashboard data:', error);
              if (error.name === 'AbortError') {
                showDashboardError('Request timeout - Koneksi ke router mungkin lambat');
              } else {
                showDashboardError('Gagal memuat data dashboard: ' + error.message);
              }
            });
        }

        function updateDashboardUI(data) {
          const routerStatusBadge = document.getElementById('routerStatusBadge');
          const routerStatusText = document.getElementById('routerStatusText');
          const routerUptime = document.getElementById('routerUptime');

          if (data.connectionTest && data.connectionTest.success) {
            routerStatusBadge.className = 'badge bg-success-subtle text-success border border-success-subtle rounded-pill';
            routerStatusBadge.innerHTML = 'Online';
            if (data.systemResources) {
              routerStatusText.textContent = data.systemResources['board-name'] || 'N/A';
              routerUptime.textContent = data.systemResources.uptime || 'N/A';
            } else {
              routerStatusText.textContent = 'Online';
              routerUptime.textContent = '-';
            }
          } else {
            routerStatusBadge.className = 'badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill';
            routerStatusBadge.innerHTML = 'Offline';
            routerStatusText.textContent = 'Offline';
            routerUptime.textContent = data.connectionTest?.message || 'Router tidak dapat diakses';
          }

          const totalConnections = document.getElementById('totalConnections');
          totalConnections.textContent = data.totalActiveConnections || 0;

          const ramUsage = document.getElementById('ramUsage');
          const ramDetails = document.getElementById('ramDetails');
          if (data.systemHealth && data.systemHealth.totalMemory > 0) {
            ramUsage.textContent = data.systemHealth.memoryPercent + '%';
            ramUsage.className = 'mb-0 mt-1 fw-bold';
            ramDetails.textContent = Math.round(data.systemHealth.usedMemory / 1024 / 1024) + ' MB / ' + Math.round(data.systemHealth.totalMemory / 1024 / 1024) + ' MB';
          } else {
            ramUsage.textContent = '-';
            ramUsage.className = 'mb-0 mt-1 fw-bold text-muted';
            ramDetails.textContent = '-';
          }

          const tableBody = document.getElementById('monitoringTableBody');
          if (data.usersWithSessions && data.usersWithSessions.length > 0) {
            const displayUsers = data.usersWithSessions.slice(0, 10);
            tableBody.innerHTML = displayUsers.map(user => {
              const statusBadge = user.status === 'online' 
                ? '<span class="badge bg-success-subtle text-success"><i class="bi bi-circle-fill"></i> Online</span>'
                : '<span class="badge bg-secondary-subtle text-secondary"><i class="bi bi-circle"></i> Offline</span>';
              
              const deviceBadge = user.activeDevices > 0
                ? `<a href="#" class="activeDeviceCountLink text-decoration-none" data-comment-id="${user.commentId}" title="Klik untuk melihat detail perangkat aktif">
                     <span class="badge bg-info-subtle text-info">${user.activeDevices} Device${user.activeDevices > 1 ? 's' : ''}</span>
                   </a>`
                : '<span class="text-muted">-</span>';
              
              const uptimeBadge = (user.status === 'online' && user.uptime !== '0s')
                ? `<span class="badge bg-primary-subtle text-primary"><i class="bi bi-clock"></i> ${user.uptime}</span>`
                : '<span class="text-muted">-</span>';

              return `
                <tr>
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <i class="bi bi-person-circle text-primary"></i>
                      <strong>${user.username}</strong>
                    </div>
                  </td>
                  <td class="text-nowrap">
                    <code class="bg-light px-2 py-1 rounded">${user.commentId}</code>
                  </td>
                  <td>${statusBadge}</td>
                  <td class="text-nowrap">${deviceBadge}</td>
                  <td class="text-nowrap">${uptimeBadge}</td>
                </tr>
              `;
            }).join('');
          } else {
            tableBody.innerHTML = `
              <tr>
                <td colspan="5" class="text-center text-muted py-4">
                  <i class="bi bi-inbox"></i> Tidak ada data monitoring
                </td>
              </tr>
            `;
          }
        }

        function showDashboardError(message) {
          const routerStatusBadge = document.getElementById('routerStatusBadge');
          const routerStatusText = document.getElementById('routerStatusText');
          const routerUptime = document.getElementById('routerUptime');
          const totalConnections = document.getElementById('totalConnections');
          const ramUsage = document.getElementById('ramUsage');
          const ramDetails = document.getElementById('ramDetails');
          const tableBody = document.getElementById('monitoringTableBody');

          routerStatusBadge.className = 'badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill';
          routerStatusBadge.innerHTML = 'Error';
          routerStatusText.textContent = 'Error';
          routerUptime.textContent = message;
          totalConnections.textContent = '-';
          ramUsage.textContent = '-';
          ramUsage.className = 'mb-0 mt-1 fw-bold text-muted';
          ramDetails.textContent = '-';
          tableBody.innerHTML = `
            <tr>
              <td colspan="5" class="text-center text-danger py-4">
                <i class="bi bi-exclamation-triangle"></i> ${message}
              </td>
            </tr>
          `;
        }

        loadDashboardData();
        const topUsersLoading = document.getElementById('topUsersLoading');
        const topUsersContent = document.getElementById('topUsersContent');
        const topUsersError = document.getElementById('topUsersError');
        const topUsersTableBody = document.getElementById('topUsersTableBody');

        if (topUsersLoading && topUsersContent && topUsersTableBody) {
          fetch('/admin/api/top-users')
            .then(response => response.json())
            .then(data => {
              topUsersLoading.style.display = 'none';
              if (data.success && data.data && data.data.length > 0) {
                topUsersTableBody.innerHTML = data.data.map(user => `
                  <tr>
                    <td><span class="badge bg-primary-subtle text-primary">#${user.rank}</span></td>
                    <td><code>${user.username}</code></td>
                    <td>${user.comment}</td>
                    <td class="text-nowrap"><strong>${user.download_formatted}</strong></td>
                    <td class="text-nowrap">${user.upload_formatted}</td>
                  </tr>
                `).join('');
                topUsersContent.style.display = 'block';
              } else {
                topUsersTableBody.innerHTML = `
                  <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                      <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                      No bandwidth data available
                    </td>
                  </tr>
                `;
                topUsersContent.style.display = 'block';
              }
            })
            .catch(error => {
              console.error('Error loading top users:', error);
              topUsersLoading.style.display = 'none';
              topUsersError.style.display = 'block';
            });
        }
      });
    })();
  </script>
  <script>
    (function() {
      const logForm = document.getElementById('logFilterForm');
      const logTableBody = document.getElementById('logTableBody');
      const logPagination = document.getElementById('logPagination');
      const logResetBtn = document.getElementById('logResetBtn');
      if (!logForm || !logTableBody || !logPagination) {
        return;
      }

      let currentPage = 1;
      const limit = 20;

      const renderRows = (logs) => {
        if (!logs || logs.length === 0) {
          logTableBody.innerHTML = `
            <tr>
              <td colspan="5" class="text-center text-muted py-4">
                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                Tidak ada aktivitas yang ditemukan
              </td>
            </tr>
          `;
          return;
        }

        logTableBody.innerHTML = logs
          .map(
            (log) => `
              <tr>
                <td class="text-nowrap"><small class="text-muted">${log.created_at_formatted || '-'}</small></td>
                <td><strong>${log.username || 'System'}</strong></td>
                <td>
                  <span class="badge bg-primary-subtle text-primary">${log.action}</span>
                </td>
                <td>${log.details || '-'}</td>
                <td class="text-nowrap"><code class="text-muted">${log.ip_address || '-'}</code></td>
              </tr>
            `
          )
          .join('');
      };

      const renderPagination = (totalPages) => {
        if (!totalPages || totalPages <= 1) {
          logPagination.innerHTML = '';
          return;
        }

        const maxButtons = 5;
        let startPage = Math.max(1, currentPage - Math.floor(maxButtons / 2));
        let endPage = startPage + maxButtons - 1;

        if (endPage > totalPages) {
          endPage = totalPages;
          startPage = Math.max(1, endPage - maxButtons + 1);
        }

        let html = '<ul class="pagination pagination-sm justify-content-end mb-0">';
        html += `
          <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
            <button class="page-link" type="button" data-page="${currentPage - 1}">Prev</button>
          </li>
        `;

        for (let page = startPage; page <= endPage; page++) {
          html += `
            <li class="page-item ${page === currentPage ? 'active' : ''}">
              <button class="page-link" type="button" data-page="${page}">${page}</button>
            </li>
          `;
        }

        html += `
          <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
            <button class="page-link" type="button" data-page="${currentPage + 1}">Next</button>
          </li>
        `;
        html += '</ul>';

        logPagination.innerHTML = html;
      };

      const fetchLogs = async (page = 1) => {
        const formData = new FormData(logForm);
        const params = new URLSearchParams();
        params.set('page', page);
        params.set('limit', limit);

        const search = formData.get('search');
        const actionType = formData.get('action_type');

        if (search && search.trim() !== '') {
          params.set('search', search.trim());
        }
        if (actionType) {
          params.set('action_type', actionType);
        }

        logTableBody.innerHTML = `
          <tr>
            <td colspan="5" class="text-center text-muted py-4">
              <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
              <p class="mb-0 mt-2">Memuat data...</p>
            </td>
          </tr>
        `;
        logPagination.innerHTML = '';

        try {
          const response = await fetch(`/admin/api/logs?${params.toString()}`, {
            headers: { Accept: 'application/json' }
          });
          const data = await response.json();

          if (!response.ok || !data.success) {
            throw new Error(data.message || 'Gagal memuat log');
          }

          currentPage = data.currentPage || page;
          renderRows(data.logs || []);
          renderPagination(data.totalPages || 1);
        } catch (error) {
          logTableBody.innerHTML = `
            <tr>
              <td colspan="5" class="text-center text-danger py-4">
                ${error.message || 'Gagal memuat data'}
              </td>
            </tr>
          `;
          logPagination.innerHTML = '';
        }
      };

      logForm.addEventListener('submit', (event) => {
        event.preventDefault();
        fetchLogs(1);
      });

      if (logPagination) {
        logPagination.addEventListener('click', (event) => {
          const button = event.target.closest('[data-page]');
          if (!button) {
            return;
          }

          const targetPage = parseInt(button.getAttribute('data-page'), 10);
          if (Number.isNaN(targetPage) || targetPage < 1 || targetPage === currentPage) {
            return;
          }

          fetchLogs(targetPage);
        });
      }

      if (logResetBtn) {
        logResetBtn.addEventListener('click', (event) => {
          event.preventDefault();
          logForm.reset();
          fetchLogs(1);
        });
      }

      fetchLogs(1);
    })();
  </script>
  <div class="modal fade" id="liveMonitoringModal" tabindex="-1" aria-labelledby="liveMonitoringModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="liveMonitoringModalLabel">
            <i class="bi bi-list-check"></i> Detail Perangkat Aktif
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="sessionTableLoading" class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-2">Memuat data perangkat aktif...</p>
