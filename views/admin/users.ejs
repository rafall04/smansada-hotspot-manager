            <div class="card card-clean mb-4">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Tambah User Baru</h5>
                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                  data-bs-target="#importModal">
                  <i class="bi bi-upload"></i> Import Data Massal
                </button>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/users" id="addUserForm" novalidate>
                  <div class="mb-4">
                    <label class="form-label fw-semibold">Tipe User</label>
                    <div class="row g-3">
                      <div class="col-md-6">
                        <div class="card border-2" id="userTypeExistingCard">
                          <div class="card-body">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="user_type" id="user_type_existing"
                                value="existing" checked>
                              <label class="form-check-label fw-medium" for="user_type_existing">
                                User Sudah Ada di Mikrotik
                              </label>
                            </div>
                            <small class="text-muted d-block mt-2">User hotspot sudah ada, verifikasi Comment ID.</small>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="card border-2" id="userTypeNewCard">
                          <div class="card-body">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="user_type" id="user_type_new"
                                value="new">
                              <label class="form-check-label fw-medium" for="user_type_new">
                                User Baru + Buat di Mikrotik
                              </label>
                            </div>
                            <small class="text-muted d-block mt-2">Buat user baru di Mikrotik.</small>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Login Credentials -->
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="username" class="form-label">Username (Login Web) <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" id="username" name="username" required
                        maxlength="100" placeholder="Masukkan Username">
                      <div class="form-text">Username untuk login ke sistem web.</div>
                    </div>
                    <div class="col-md-6">
                      <label for="password" class="form-label">Password (Login Web) <span class="text-muted">(Opsional)</span></label>
                      <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password"
                          placeholder="Kosongkan untuk menggunakan username sebagai password">
                        <button type="button" class="btn btn-outline-secondary" id="togglePasswordBtn" title="Tampilkan Password">
                          <i class="bi bi-eye" id="passwordEyeIcon"></i>
                        </button>
                      </div>
                      <div class="form-text text-muted">Kosongkan jika ingin menggunakan Username sebagai Password.</div>
                    </div>
                  </div>

                  <!-- Common Fields -->
