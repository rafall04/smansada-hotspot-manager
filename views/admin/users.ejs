    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
            (function () {
              'use strict';

              const UserManagement = {
                modalInstances: {},

                init: function () {
                  this.attachEventListeners();
                  this.initializeFormFields();
                },

                attachEventListeners: function () {
                  const self = this;
                  const addForm = document.getElementById('addUserForm');
                  const resetBtn = document.getElementById('resetBtn');
                  const verifyBtn = document.getElementById('verifyCommentBtn');
                  const loadProfilesBtn = document.getElementById('loadProfilesBtn');
                  const togglePasswordBtn = document.getElementById('togglePasswordBtn');
                  const userTypeRadios = document.querySelectorAll('input[name="user_type"]');

                  if (addForm) {
                    addForm.addEventListener('submit', this.handleAddFormSubmit.bind(this));
                  }

                  if (resetBtn) {
                    resetBtn.addEventListener('click', this.resetForm.bind(this));
                  }

                  if (verifyBtn) {
                    verifyBtn.addEventListener('click', this.verifyCommentId.bind(this));
                  }

                  if (loadProfilesBtn) {
                    loadProfilesBtn.addEventListener('click', this.loadProfiles.bind(this));
                  }

                  const loadProfilesImportBtn = document.getElementById('loadProfilesImportBtn');
                  if (loadProfilesImportBtn) {
                    loadProfilesImportBtn.addEventListener('click', this.loadProfilesForImport.bind(this));
                  }

                  const deleteAllGuruForm = document.getElementById('deleteAllGuruForm');
                  if (deleteAllGuruForm) {
                    deleteAllGuruForm.addEventListener('submit', this.handleDeleteAllGuru.bind(this));
                  }

                  if (togglePasswordBtn) {
                    togglePasswordBtn.addEventListener('click', this.togglePasswordVisibility.bind(this, 'password', 'passwordEyeIcon'));
                  }

                  // Auto-populate username from Comment ID field
                  const commentIdField = document.getElementById('mikrotik_comment_id');
                  const usernameField = document.getElementById('username');
                  if (commentIdField && usernameField) {
                    commentIdField.addEventListener('input', function() {
                      if (!usernameField.value || usernameField.value === commentIdField.value) {
                        usernameField.value = commentIdField.value;
                      }
                    });
                  }

                  userTypeRadios.forEach((radio) => {
                    radio.addEventListener('change', this.toggleUserTypeFields.bind(this));
                  });

                  // Make entire card clickable for user type selection
                  const existingCard = document.getElementById('userTypeExistingCard');
                  const newCard = document.getElementById('userTypeNewCard');
                  const existingRadio = document.getElementById('user_type_existing');
                  const newRadio = document.getElementById('user_type_new');

                  if (existingCard && existingRadio) {
                    existingCard.addEventListener('click', function(e) {
                      // Don't trigger if clicking directly on the radio or label
                      if (e.target.closest('.form-check-input') || e.target.closest('.form-check-label')) {
                        return;
                      }
                      e.preventDefault();
                      existingRadio.checked = true;
                      existingRadio.dispatchEvent(new Event('change', { bubbles: true }));
                    });
                  }

                  if (newCard && newRadio) {
                    newCard.addEventListener('click', function(e) {
                      // Don't trigger if clicking directly on the radio or label
                      if (e.target.closest('.form-check-input') || e.target.closest('.form-check-label')) {
                        return;
                      }
                      e.preventDefault();
                      newRadio.checked = true;
                      newRadio.dispatchEvent(new Event('change', { bubbles: true }));
                    });
                  }

                  document.addEventListener('click', function (e) {
                    if (e.target.closest('.reveal-password-btn')) {
                      const btn = e.target.closest('.reveal-password-btn');
                      const userId = btn.getAttribute('data-user-id');
                      if (userId) {
                        self.revealPassword(parseInt(userId));
                      }
                    }

                    if (e.target.closest('.edit-user-btn')) {
                      const btn = e.target.closest('.edit-user-btn');
                      const userId = btn.getAttribute('data-user-id');
                      if (userId) {
                        e.preventDefault();
                        e.stopPropagation();
                        self.openEditModal(parseInt(userId));
                      }
                    }

                    if (e.target.closest('[id^="edit_verifyCommentBtn_"]')) {
                      const btn = e.target.closest('[id^="edit_verifyCommentBtn_"]');
                      const userId = btn.id.replace('edit_verifyCommentBtn_', '');
                      self.verifyEditCommentId(parseInt(userId));
                    }

                    if (e.target.closest('[id^="edit_togglePasswordBtn_"]')) {
