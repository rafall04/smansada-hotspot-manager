                handleDeleteAllGuru: async function (e) {
                  e.preventDefault();
                  
                  const form = e.target;
                  const passwordInput = form.querySelector('#admin_password');
                  const submitBtn = form.querySelector('button[type="submit"]');
                  
                  if (!passwordInput || !passwordInput.value.trim()) {
                    alert('Password admin wajib diisi');
                    return;
                  }

                  const confirmMessage = 'PERINGATAN! Tindakan ini akan menghapus SEMUA user guru dari database dan Mikrotik.\n\nTindakan ini TIDAK DAPAT DIBATALKAN!\n\nApakah Anda yakin ingin melanjutkan?';
                  
                  if (!confirm(confirmMessage)) {
                    return;
                  }

                  if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Menghapus...';
                  }

                  try {
                    const formData = new FormData(form);
                    const response = await fetch('/admin/users/delete-all-guru', {
                      method: 'POST',
                      headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                      },
                      body: formData
                    });

                    if (!response.ok) {
                      const errorText = await response.text();
                      throw new Error(`HTTP ${response.status}: ${errorText.substring(0, 100)}`);
                    }

                    const contentType = response.headers.get('content-type');
                    if (!contentType || !contentType.includes('application/json')) {
                      const text = await response.text();
                      if (text.includes('<!DOCTYPE') || text.includes('<html')) {
                        throw new Error('Server mengembalikan halaman HTML. Mungkin terjadi redirect atau error.');
                      }
                      throw new Error('Response bukan JSON: ' + contentType);
                    }

                    const data = await response.json();

                    if (data.success) {
                      if (typeof displayFeedbackModal === 'function') {
                        displayFeedbackModal('success', 'Berhasil', data.message || 'Semua user guru berhasil dihapus');
                      } else {
                        alert('Berhasil: ' + (data.message || 'Semua user guru berhasil dihapus'));
                      }
                      
