<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="bi bi-router"></i> <%= (settings && settings.school_name) || 'Hotspot Manager' %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/users">
                            <i class="bi bi-people"></i> Guru & Hotspot
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/admins">
                            <i class="bi bi-shield-check"></i> Admin Accounts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/settings">
                            <i class="bi bi-gear"></i> Settings
                        </a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-2">
                    <span class="navbar-text">
                        <i class="bi bi-person-circle"></i> <%= session.username %>
                    </span>
                    <form method="POST" action="/logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5">
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
            <div>
                <h2 class="fw-bold mb-1">Pengaturan Sistem</h2>
                <p class="text-muted mb-0">Kelola konfigurasi aplikasi dan notifikasi</p>
            </div>
            <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm mt-3 mt-md-0">
                <i class="bi bi-arrow-left"></i> Kembali ke Dashboard
            </a>
        </div>

        <form method="POST" action="/admin/settings" id="mainSettingsForm">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card card-clean">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-gear"></i> Pengaturan Aplikasi</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="school_name" class="form-label">
                                    <i class="bi bi-building"></i> Nama Sekolah
                                </label>
                                <input type="text" class="form-control" id="school_name" name="school_name"
                                       value="<%= (settings && settings.school_name) || 'SMAN 1 CONTOH' %>" required>
                                <div class="form-text">Nama ini akan tampil pada semua halaman sebagai branding.</div>
                            </div>
                            <div class="mb-4">
                                <label for="hotspot_dns_name" class="form-label">
                                    <i class="bi bi-globe"></i> Hotspot DNS Name
                                </label>
                                <input type="text" class="form-control" id="hotspot_dns_name" name="hotspot_dns_name" 
                                       value="<%= settings.hotspot_dns_name || '' %>" 
                                       placeholder="wifi.sekolah.sch.id">
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> DNS name untuk hotspot login (opsional). Jika kosong, akan menggunakan Router IP dari environment variables.
                                </div>
                            </div>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> <strong>Router Configuration:</strong> Konfigurasi router (IP, username, password) sekarang hanya dapat diubah melalui file <code>.env</code>. Lihat dokumentasi untuk detail.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification Settings Card -->
            <div class="row justify-content-center mt-4">
                <div class="col-lg-8">
                    <div class="card card-clean">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-bell"></i> Notification Settings (Telegram)</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="telegram_bot_token" class="form-label">
                                    <i class="bi bi-key"></i> Telegram Bot Token
                                </label>
                                <input type="text" class="form-control" id="telegram_bot_token" name="telegram_bot_token" 
                                       value="<%= settings.telegram_bot_token || '' %>" 
                                       placeholder="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz">
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Get your bot token from <a href="https://t.me/BotFather" target="_blank">@BotFather</a>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="telegram_chat_id" class="form-label">
                                    <i class="bi bi-chat-dots"></i> Telegram Chat ID
                                </label>
                                <input type="text" class="form-control" id="telegram_chat_id" name="telegram_chat_id" 
                                       value="<%= settings.telegram_chat_id || '' %>" 
                                       placeholder="123456789">
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Get your chat ID from <a href="https://t.me/userinfobot" target="_blank">@userinfobot</a>
                                </div>
                            </div>
                            <div class="d-flex gap-3 justify-content-end">
                                <button type="button" class="btn btn-outline-primary" id="runDiagnosticsBtn">
                                    <i class="bi bi-activity"></i> Run Diagnostics
                                </button>
                            </div>
                            <div id="diagnosticResults" class="alert d-none mt-3" role="alert"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-lg-8">
                    <div class="d-flex gap-3 justify-content-end">
                        <a href="/admin/dashboard" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Batal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Simpan Settings
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <div class="row justify-content-center mt-4">
            <div class="col-lg-8">
                <div class="card card-clean border-warning">
                    <div class="card-header bg-warning-subtle">
                        <h5 class="mb-0"><i class="bi bi-database"></i> Database Backup & Restore</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> <strong>Penting:</strong> Backup database sebelum melakukan update kode atau perubahan besar. Database tidak di-track oleh git, jadi backup manual diperlukan.
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <i class="bi bi-download fs-1 text-primary mb-3"></i>
                                        <h6 class="card-title">Download Database</h6>
                                        <p class="card-text text-muted small">Unduh database saat ini sebagai backup</p>
                                        <a href="/admin/settings/download-database" class="btn btn-primary btn-sm">
                                            <i class="bi bi-download"></i> Download Database
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card border-danger">
                                    <div class="card-body">
                                        <i class="bi bi-upload fs-1 text-danger mb-3 d-block text-center"></i>
                                        <h6 class="card-title text-center">Restore Database</h6>
                                        <p class="card-text text-muted small text-center mb-3">Upload file database untuk restore</p>
                                        
                                        <form method="POST" action="/admin/settings/restore-database" enctype="multipart/form-data" id="restoreDatabaseForm">
                                            <div class="mb-3">
                                                <input type="file" class="form-control form-control-sm" id="database_file" name="database_file" accept=".db,.sqlite,.sqlite3" required>
                                                <div class="form-text small">
                                                    <i class="bi bi-exclamation-triangle text-warning"></i> Database saat ini akan di-backup otomatis sebelum restore
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-danger btn-sm w-100" id="restoreBtn">
                                                <i class="bi bi-upload"></i> Restore Database
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h6 class="fw-semibold mb-2"><i class="bi bi-shield-check"></i> Keamanan:</h6>
                            <ul class="small text-muted mb-0">
                                <li>Database tidak di-track oleh git (aman dari git stash/reset)</li>
                                <li>Backup otomatis dibuat sebelum restore</li>
                                <li>File database divalidasi sebelum restore</li>
                                <li>Integrity check dilakukan untuk memastikan database valid</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-lg-8">
                    <div class="card card-clean border-success">
                        <div class="card-header bg-success-subtle">
                            <h5 class="mb-0"><i class="bi bi-cloud-upload"></i> Backup Manual & Upload ke Telegram</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> <strong>Info:</strong> Buat backup database dan upload otomatis ke Telegram. Backup akan tersimpan di folder <code>backups/</code> dan dikirim ke Telegram jika sudah dikonfigurasi.
                            </div>

                            <div class="d-flex flex-column flex-md-row gap-3 align-items-md-center">
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold mb-1"><i class="bi bi-database"></i> Backup Sekarang</h6>
                                    <p class="text-muted small mb-0">
                                        Buat backup database dan upload ke Telegram. Backup otomatis harian berjalan setiap pagi jam 6:00 WIB.
                                    </p>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-success" id="backupNowBtn">
                                        <i class="bi bi-cloud-upload"></i> Backup Sekarang
                                    </button>
                                </div>
                            </div>

                            <div id="backupResult" class="alert d-none mt-3" role="alert"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-lg-8">
                    <div class="card card-clean border-warning">
                        <div class="card-header bg-warning-subtle">
                            <h5 class="mb-0"><i class="bi bi-arrow-down-up"></i> Rapikan ID User</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i> <strong>Peringatan:</strong> Fitur ini akan merapikan ID user agar urut dari 1. ID yang ada akan diubah tanpa menghapus data. <strong>Disarankan untuk backup database terlebih dahulu.</strong>
                            </div>

                            <div class="d-flex flex-column flex-md-row gap-3 align-items-md-center">
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold mb-1"><i class="bi bi-123"></i> Renumber User IDs</h6>
                                    <p class="text-muted small mb-0">
                                        Merapikan ID user yang tidak urut (misalnya: 1, 3, 5, 50, 51) menjadi urut (1, 2, 3, 4, 5). Semua data user tetap aman, hanya ID yang diubah.
                                    </p>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-warning" id="renumberIdsBtn">
                                        <i class="bi bi-arrow-down-up"></i> Rapikan ID
                                    </button>
                                </div>
                            </div>

                            <div id="renumberResult" class="alert d-none mt-3" role="alert"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script src="/js/app.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const diagnosticsBtn = document.getElementById('runDiagnosticsBtn');
            const diagnosticsResult = document.getElementById('diagnosticResults');
            const settingsForm = document.getElementById('mainSettingsForm');
            const restoreDatabaseForm = document.getElementById('restoreDatabaseForm');
            const restoreBtn = document.getElementById('restoreBtn');
            const backupNowBtn = document.getElementById('backupNowBtn');
            const backupResult = document.getElementById('backupResult');

            if (diagnosticsBtn && diagnosticsResult) {
                diagnosticsBtn.addEventListener('click', async function() {
                    const payload = {};

                    const originalText = this.innerHTML;
                    diagnosticsResult.classList.add('d-none');
                    diagnosticsResult.classList.remove('alert-success', 'alert-warning', 'alert-danger');
                    this.disabled = true;
                    this.innerHTML = '<i class="bi bi-hourglass-split"></i> Running...';

                    try {
                        const response = await fetch('/admin/settings/run-diagnostics', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Accept': 'application/json'
                            },
                            body: JSON.stringify(payload)
                        });

                        const data = await response.json();
                        if (!response.ok || !data.success) {
                            const validationMessage = data.validationErrors
                                ? data.validationErrors.map((err) => err.msg).join(', ')
                                : null;
                            throw new Error(validationMessage || data.message || 'Gagal menjalankan diagnostics');
                        }

                        const diagnostics = data.diagnostics || {};
                        const rows = [
                            {
                                label: 'Konektivitas',
                                success: diagnostics.connectivity?.success,
                                message: diagnostics.connectivity?.message
                              || 'Tidak ada informasi'
                            },
                            {
                                label: 'Hak Akses Hotspot',
                                success: diagnostics.permissions?.success,
                                message: diagnostics.permissions?.message
                              || 'Tidak ada informasi'
                            }
                        ];

                        const allSuccess = rows.every((row) => row.success);
                        diagnosticsResult.classList.remove('d-none');
                        diagnosticsResult.classList.add(allSuccess ? 'alert-success' : 'alert-warning');
                        diagnosticsResult.innerHTML = `
                            <strong>Hasil Diagnostics:</strong>
                            <ul class="mb-0 mt-2">
                                ${rows
                                  .map(
                                    (row) =>
                                      `<li>${row.label}: ${row.success ? '✅' : '⚠️'} ${row.message}</li>`
                                  )
                                  .join('')}
                            </ul>
                        `;
                    } catch (error) {
                        diagnosticsResult.classList.remove('d-none');
                        diagnosticsResult.classList.add('alert-danger');
                        diagnosticsResult.innerHTML = `<strong>Diagnostics gagal:</strong> ${error.message}`;
                        console.error('Diagnostics error:', error);
                    } finally {
                        this.disabled = false;
                        this.innerHTML = originalText;
                    }
                });
            }

            if (restoreDatabaseForm && restoreBtn) {
                restoreDatabaseForm.addEventListener('submit', function(e) {
                    const fileInput = document.getElementById('database_file');
                    if (!fileInput || !fileInput.files || !fileInput.files[0]) {
                        e.preventDefault();
                        alert('Silakan pilih file database terlebih dahulu');
                        return false;
                    }

                    const fileName = fileInput.files[0].name;
                    const fileSize = fileInput.files[0].size;
                    const maxSize = 50 * 1024 * 1024;

                    if (fileSize > maxSize) {
                        e.preventDefault();
                        alert('File terlalu besar. Maksimal 50MB');
                        return false;
                    }

                    const confirmMessage = `⚠️ PERINGATAN: Restore Database\n\n` +
                        `File: ${fileName}\n` +
                        `Ukuran: ${(fileSize / 1024 / 1024).toFixed(2)} MB\n\n` +
                        `Database saat ini akan di-backup otomatis sebelum restore.\n` +
                        `Aplikasi mungkin perlu restart setelah restore.\n\n` +
                        `Apakah Anda yakin ingin melanjutkan?`;

                    if (!confirm(confirmMessage)) {
                        e.preventDefault();
                        return false;
                    }

                    // Show loading state
                    restoreBtn.disabled = true;
                    const originalText = restoreBtn.innerHTML;
                    restoreBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Restoring...';
                });
            }

            if (backupNowBtn && backupResult) {
                backupNowBtn.addEventListener('click', async function() {
                    const originalText = this.innerHTML;
                    backupResult.classList.add('d-none');
                    backupResult.classList.remove('alert-success', 'alert-warning', 'alert-danger');
                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Memproses...';

                    try {
                        const response = await fetch('/admin/settings/backup-now', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Accept': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (!response.ok) {
                            const errorText = await response.text();
                            let errorMessage = 'Gagal membuat backup';
                            
                            try {
                                const errorData = JSON.parse(errorText);
                                errorMessage = errorData.message || errorMessage;
                            } catch (e) {
                                errorMessage = errorText.substring(0, 200) || errorMessage;
                            }
                            
                            throw new Error(errorMessage);
                        }

                        const contentType = response.headers.get('content-type');
                        if (!contentType || !contentType.includes('application/json')) {
                            const text = await response.text();
                            if (text.includes('<!DOCTYPE') || text.includes('<html')) {
                                throw new Error('Server mengembalikan halaman HTML. Mungkin terjadi redirect.');
                            }
                            throw new Error('Response bukan JSON: ' + contentType);
                        }

                        const data = await response.json();

                        if (data.success) {
                            const backup = data.backup || {};
                            let resultHtml = '<strong><i class="bi bi-check-circle-fill"></i> Backup Berhasil!</strong><br>';
                            
                            if (backup.filename) {
                                resultHtml += `<div class="mt-2"><strong>File:</strong> <code>${backup.filename}</code></div>`;
                            }
                            
                            if (backup.size) {
                                resultHtml += `<div><strong>Ukuran:</strong> <code>${backup.size}</code></div>`;
                            }
                            
                            if (backup.integrityOk !== undefined) {
                                resultHtml += `<div><strong>Integritas:</strong> ${backup.integrityOk ? '<span class="text-success">✓ OK</span>' : '<span class="text-warning">⚠️ Warning</span>'}</div>`;
                            }
                            
                            if (backup.telegramUploaded) {
                                resultHtml += `<div class="mt-2"><span class="badge bg-success"><i class="bi bi-telegram"></i> Berhasil diupload ke Telegram</span></div>`;
                            } else if (backup.telegramError) {
                                resultHtml += `<div class="mt-2"><span class="badge bg-warning"><i class="bi bi-exclamation-triangle"></i> Backup dibuat, tetapi gagal upload ke Telegram: ${backup.telegramError}</span></div>`;
                            } else {
                                resultHtml += `<div class="mt-2"><span class="badge bg-info"><i class="bi bi-info-circle"></i> Telegram tidak dikonfigurasi</span></div>`;
                            }

                            backupResult.classList.remove('d-none');
                            backupResult.classList.add('alert-success');
                            backupResult.innerHTML = resultHtml;
                        } else {
                            throw new Error(data.message || 'Gagal membuat backup');
                        }
                    } catch (error) {
                        console.error('Backup error:', error);
                        backupResult.classList.remove('d-none');
                        backupResult.classList.add('alert-danger');
                        backupResult.innerHTML = `<strong><i class="bi bi-exclamation-triangle-fill"></i> Error:</strong> ${error.message}`;
                    } finally {
                        this.disabled = false;
                        this.innerHTML = originalText;
                    }
                });
            }

            if (renumberIdsBtn && renumberResult) {
                renumberIdsBtn.addEventListener('click', async function() {
                    const confirmMessage = '⚠️ PERINGATAN: Renumber User IDs\n\n' +
                        'Tindakan ini akan merapikan ID user agar urut dari 1.\n' +
                        'Semua data user tetap aman, hanya ID yang diubah.\n\n' +
                        'Disarankan untuk backup database terlebih dahulu.\n\n' +
                        'Apakah Anda yakin ingin melanjutkan?';
                    
                    if (!confirm(confirmMessage)) {
                        return;
                    }

                    const originalText = this.innerHTML;
                    renumberResult.classList.add('d-none');
                    renumberResult.classList.remove('alert-success', 'alert-warning', 'alert-danger');
                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Memproses...';

                    try {
                        const response = await fetch('/admin/settings/renumber-ids', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Accept': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (!response.ok) {
                            const errorText = await response.text();
                            let errorMessage = 'Gagal merapikan ID';
                            
                            try {
                                const errorData = JSON.parse(errorText);
                                errorMessage = errorData.message || errorMessage;
                            } catch (e) {
                                errorMessage = errorText.substring(0, 200) || errorMessage;
                            }
                            
                            throw new Error(errorMessage);
                        }

                        const contentType = response.headers.get('content-type');
                        if (!contentType || !contentType.includes('application/json')) {
                            const text = await response.text();
                            if (text.includes('<!DOCTYPE') || text.includes('<html')) {
                                throw new Error('Server mengembalikan halaman HTML. Mungkin terjadi redirect.');
                            }
                            throw new Error('Response bukan JSON: ' + contentType);
                        }

                        const data = await response.json();

                        if (data.success) {
                            let resultHtml = `<strong><i class="bi bi-check-circle-fill"></i> ID Berhasil Dirapikan!</strong><br>`;
                            
                            if (data.renumbered !== undefined) {
                                resultHtml += `<div class="mt-2"><strong>ID yang dirapikan:</strong> <code>${data.renumbered}</code> user(s)</div>`;
                            }
                            
                            if (data.totalUsers !== undefined) {
                                resultHtml += `<div><strong>Total user:</strong> <code>${data.totalUsers}</code></div>`;
                            }
                            
                            resultHtml += `<div class="mt-2"><span class="badge bg-success"><i class="bi bi-check-circle"></i> ID sekarang urut dari 1</span></div>`;

                            renumberResult.classList.remove('d-none');
                            renumberResult.classList.add('alert-success');
                            renumberResult.innerHTML = resultHtml;
                            
                            setTimeout(() => {
                                window.location.reload();
                            }, 2000);
                        } else {
                            throw new Error(data.message || 'Gagal merapikan ID');
                        }
                    } catch (error) {
                        console.error('Renumber IDs error:', error);
                        renumberResult.classList.remove('d-none');
                        renumberResult.classList.add('alert-danger');
                        renumberResult.innerHTML = `<strong><i class="bi bi-exclamation-triangle-fill"></i> Error:</strong> ${error.message}`;
                    } finally {
                        this.disabled = false;
                        this.innerHTML = originalText;
                    }
                });
            }
        });
    </script>
  <%- include('../partials/feedback_modal') %>
</body>
</html>
