{
  "name": "mikrotik-hotspot-self-service",
  "version": "1.0.0",
  "description": "Mikrotik Hotspot Self-Service Management for School Teachers",
  "main": "server.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "setup-db": "node setup_db.js",
    "generate-keys": "node generate-keys.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop smansada-hotspot",
    "pm2:restart": "pm2 restart smansada-hotspot",
    "pm2:delete": "pm2 delete smansada-hotspot",
    "pm2:logs": "pm2 logs smansada-hotspot",
    "pm2:monit": "pm2 monit",
    "db:diagnose": "node scripts/diagnose-db.js",
    "db:repair": "node scripts/diagnose-db.js --repair",
    "db:backup": "bash scripts/backup-database.sh",
    "perms:diagnose": "bash scripts/diagnose-permissions.sh",
    "perms:fix": "bash scripts/fix-permissions.sh",
    "env:validate": "node scripts/validate-env.js",
    "env:fix": "node scripts/validate-env.js --fix",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "mikrotik",
    "hotspot",
    "self-service"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "connect-flash": "^0.1.1",
    "connect-sqlite3": "^0.9.16",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "multer": "^2.0.2",
    "node-routeros-v2": "^1.6.12",
    "validator": "^13.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.3"
  }
}
